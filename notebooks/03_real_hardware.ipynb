# %% [code]
# Create a circuit that could run on OQTOPUS
dev = qml.device("default.qubit", wires=2, shots=1000)

@qml.qnode(dev)
def oqtopus_circuit():
    qml.Hadamard(wires=0)
    qml.CNOT(wires=[0, 1])
    return qml.counts()

# Run locally first
local_results = oqtopus_circuit()
print("Local simulation:", local_results)

