# %% [markdown]
# # Quantum Gradients - PennyLane's Killer Feature
# Learn how to differentiate quantum circuits

# %% [code]
import pennylane as qml
from pennylane import numpy as np

# Create a parameterized circuit
dev = qml.device("default.qubit", wires=2)

@qml.qnode(dev)
def variational_circuit(params):
    # Parameters: [theta, phi]
    qml.RY(params[0], wires=0)
    qml.RY(params[1], wires=1)
    qml.CNOT(wires=[0, 1])
    qml.RY(params[2], wires=0)
    return qml.expval(qml.PauliX(0))

# %% [code]
# Different types of gradients
params = np.array([0.1, 0.2, 0.3])

# 1. Standard gradient
grad1 = qml.grad(variational_circuit)(params)
print(f"Standard gradient: {grad1}")

# 2. Parameter-shift rule (works on real hardware!)
grad2 = qml.grad(variational_circuit, argnum=0)(params)
print(f"Parameter-shift gradient: {grad2}")

# %% [code]
# Optimize a quantum circuit like a neural network
from pennylane.optimize import GradientDescentOptimizer

opt = GradientDescentOptimizer(stepsize=0.4)
params = np.array([0.011, 0.012, 0.013])

# Training loop
for i in range(100):
    params = opt.step(variational_circuit, params)
    if i % 20 == 0:
        cost = variational_circuit(params)
        print(f"Step {i}: cost = {cost:.6f}")
