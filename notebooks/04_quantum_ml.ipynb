# %% [markdown]
# # Quantum Machine Learning
# Where PennyLane really shines!

# %% [code]
import pennylane as qml
from pennylane import numpy as np
import matplotlib.pyplot as plt

# %% [code]
# Simple quantum neural network
n_qubits = 4
n_layers = 2
dev = qml.device("default.qubit", wires=n_qubits)

def layer(params, layer_id):
    """One layer of the quantum neural network"""
    for i in range(n_qubits):
        qml.RY(params[layer_id, i, 0], wires=i)
        qml.RZ(params[layer_id, i, 1], wires=i)
    
    # Entangle all qubits
    for i in range(n_qubits - 1):
        qml.CNOT(wires=[i, i + 1])
    qml.CNOT(wires=[n_qubits - 1, 0])

@qml.qnode(dev)
def quantum_neural_net(params, x):
    # Encode input data
    for i in range(n_qubits):
        qml.RY(x * np.pi, wires=i)
    
    # Apply layers
    for l in range(n_layers):
        layer(params, l)
    
    # Measure
    return qml.expval(qml.PauliZ(0))

# %% [code]
# Generate training data
X = np.linspace(-1, 1, 20)
Y = np.sin(X * np.pi)

# Initialize parameters
params = np.random.uniform(0, 2*np.pi, (n_layers, n_qubits, 2))

# Training
from pennylane.optimize import AdamOptimizer
opt = AdamOptimizer(stepsize=0.1)

for epoch in range(200):
    total_loss = 0
    for x, y in zip(X, Y):
        def loss(p):
            return (quantum_neural_net(p, x) - y) ** 2
        params = opt.step(loss, params)
        total_loss += loss(params)
    
    if epoch % 40 == 0:
        print(f"Epoch {epoch}, Loss: {total_loss:.4f}")

# %% [code]
# Test
X_test = np.linspace(-1, 1, 100)
predictions = [quantum_neural_net(params, x) for x in X_test]

plt.figure(figsize=(10, 6))
plt.scatter(X, Y, label="Training Data", color='red')
plt.plot(X_test, predictions, label="Quantum Model", linewidth=2)
plt.xlabel("Input")
plt.ylabel("Output")
plt.legend()
plt.title("Quantum Neural Network")
plt.show()
